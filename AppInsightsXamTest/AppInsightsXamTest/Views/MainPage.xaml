<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppInsightsXamTest.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Press for Info" Command="{Binding ButtonCommand}" CommandParameter="Info"/>
        <Button Text="Press for Warning" Command="{Binding ButtonCommand}" CommandParameter="Warn"/>
        <Button Text="Press for Error" Command="{Binding ButtonCommand}" CommandParameter="Error"/>
        <Button Text="Press for Real Error" Command="{Binding ButtonCommand}" CommandParameter="RealError"/>
        <Button Text="Press for Critical" Command="{Binding ButtonCommand}" CommandParameter="Crit"/>
    </StackLayout>

</ContentPage>